<Application x:Class="StreamChatApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StreamChatApp"
             StartupUri="View/MainView.xaml"
             xmlns:View="clr-namespace:StreamChatApp.View"
             xmlns:ViewModel="clr-namespace:StreamChatApp.ViewModel"
             xmlns:Utils="clr-namespace:StreamChatApp.Utils"
             >
    <Application.Resources>
        <!--<ViewModelLocator x:Key="ViewModelLocator"/>-->
        <Utils:ViewModelLocator x:Key="ViewModelLocator">
            <Utils:ViewModelLocator.Resolver>
                <Utils:ViewModelResolver />
            </Utils:ViewModelLocator.Resolver>
        </Utils:ViewModelLocator>

        <DataTemplate DataType="{x:Type ViewModel:ChatViewModel}">
            <View:ChatView />
        </DataTemplate>
    </Application.Resources>
</Application>
